<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nkhoi_srcollview.SlidingActivity">'

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <android.support.v7.widget.RecyclerView
           android:id="@+id/recyclerview_property"
           android:layout_width="match_parent"
           android:layout_height="200dp">

       </android.support.v7.widget.RecyclerView>
            <com.sothree.slidinguppanel.SlidingUpPanelLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                app:umanoDragView="@id/svDrag"
                app:umanoScrollableView="@+id/scrollView"
                app:umanoFadeColor="@android:color/transparent"
                app:umanoOverlay="false"
                app:umanoPanelHeight="500dp"
                app:umanoParallaxOffset="200dp"
                app:umanoShadowHeight="0dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000">
                </android.support.constraint.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/svDrag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00ffff00"
                    android:clickable="false"
                    android:focusable="true">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="100dp"
                        android:background="#ffffff">
                    </ImageView>
                    <ScrollView
                        android:id="@+id/scrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toTopOf="@id/svDrag"
                        android:background="#b6e678">
                        <TextView
                            android:id="@+id/tvDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="25dp" />
                    </ScrollView>

                </FrameLayout>
            </com.sothree.slidinguppanel.SlidingUpPanelLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>